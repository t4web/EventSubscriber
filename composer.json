{
    "name": "t4web/event-subscriber",
    "description": "ZF2 Module. One place for manage application events",
    "type": "library",
    "license": "BSD-3-Clause",
    "keywords": [
        "zf2", "zf2 module", "events"
    ],
    "homepage": "https://github.com/t4web/EventSubscriber",
    "authors": [
        {
            "name": "Max Gulturyan",
            "email": "gulturyan@gmail.com",
            "homepage": "http://about.me/maxgu"
        }
    ],
    "require": {
        "php": "^5.5 || ^7.0",

        "zendframework/zend-eventmanager": "<2.6 >=2.4",
        "zendframework/zend-modulemanager": "<2.6 >=2.4",
        "zendframework/zend-servicemanager": "<2.6 >=2.4"
    },
    "require-dev" : {
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "T4web\\EventSubscriber\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "T4web\\EventSubscriberTest\\": "tests/"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@test"
        ],
        "cs": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always"
    }
}
